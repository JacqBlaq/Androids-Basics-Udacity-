            <TextView
                android:id="@+id/questions"
                style="@style/disney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disneyQ1"/>

            <RadioGroup
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/Q1A1"
                    style="@style/disneyA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disneyQ1A1" />
                <RadioButton
                    android:id="@+id/Q1A2"
                    style="@style/disneyA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disneyQ1A2"/>
                <RadioButton
                    android:id="@+id/Q1A3"
                    style="@style/disneyA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disneyQ1A3" />
                <RadioButton
                    android:id="@+id/Q1A4"
                    style="@style/disneyA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disneyQ1A4" />
            </RadioGroup>

            <!--Question 2-->
            <TextView
                android:id="@+id/question2"
                style="@style/disney"
